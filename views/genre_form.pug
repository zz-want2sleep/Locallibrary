extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='name') 藏书种类:
      input#name.form-control(type='text', placeholder='魔幻, 都市,二次元 etc.' name='name' value=(undefined===genre ? '' : genre.name), required='true' )
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg